<div class="pageHead">
  <header class="eventsHeader">
    List of Events
  </header>
</div>

<ul>
<% @events.each do |event| %>
  <li>
    <h2 class="eventName"><a href="<%= event.link %>"><%= event.name %></a></h2>
    <div class="eventDescription">
      <%=raw event.description %>
    </div>
  </li>
<% end %>
</ul>
